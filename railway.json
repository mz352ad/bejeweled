{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "./Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "java -Dspring.profiles.active=prod -Dspring.datasource.hikari.connection-timeout=240000 -Dspring.datasource.hikari.maximum-pool-size=1 -Dspring.datasource.hikari.minimum-idle=1 -Dspring.datasource.hikari.initialization-fail-timeout=0 -jar app.jar"
  }
}